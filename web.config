<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Indicates that the server should pass requests for Node.js applications to the iisnode module -->
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <!-- Redirect all HTTP traffic to HTTPS -->
      <rules>
        <rule name="Force HTTPS" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>

    <security>
      <!-- Disable directory browsing -->
      <directoryBrowse enabled="false" />
    </security>

    <httpErrors errorMode="Custom">
      <!-- Customize error pages as needed -->
      <remove statusCode="404" subStatusCode="-1" />
      <error statusCode="404" path="/404.html" responseMode="ExecuteURL" />
    </httpErrors>
  </system.webServer>

  <!-- Application settings -->
  <appSettings>
    <!-- Define any application-specific settings here -->
    <add key="SettingKey" value="SettingValue" />
  </appSettings>

  <!-- Connection strings -->
  <connectionStrings>
    <!-- Define any database or external service connection strings here -->
    <add name="MyConnectionString" connectionString="Server=myServerAddress;Database=myDataBase;User Id=myUsername;Password=myPassword;" providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>
